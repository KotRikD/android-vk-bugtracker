<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_author"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        tools:background="@drawable/vk_attach"
        android:src="@drawable/ic_person_white_24dp" />

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_author"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_author"
        android:text="@string/name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimary" />

    <FrameLayout
        android:id="@+id/frame_meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_author"
        android:layout_below="@id/txt_author"/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_author"
        android:layout_below="@+id/frame_meta"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5px"
        android:text="@string/reduced_comment"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_desc"
        android:layout_below="@+id/txt_desc"
        android:fontFamily="@font/roboto"
        android:text="Время"
        android:layout_marginBottom="5dp"
        android:textColor="#939393"
        android:layout_marginTop="5px"
        android:textSize="12sp" />

</RelativeLayout>